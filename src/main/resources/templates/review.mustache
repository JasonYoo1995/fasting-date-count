{{> header }}

<h2>리뷰 목록</h2>

{{# userName }}
    <div>{{ userName }}</div>
    <div>{{ userEmail }}</div>
{{/ userName }}

<div>
    <a href="/logout">logout</a>
</div>
<div>
    <a href="/food/">Back to food list</a>
</div>
<div>
    <a href="/food/{{foodId}}/reviews/save">Add review</a>
</div>

<!-- food table -->
<table>
    <thead>
    <th>id</th>
    <th>date</th>
    <th>title</th>
    <th>content</th>
    <th>fasted</th>
    <th>수정</th>
    <th>삭제</th>
    </thead>
    <tbody>
    {{# reviewList}}
        <tr>
            <td id="review-id">{{ id }}</td>
            <td>{{ date }}</td>
            <td>{{ title }}</td>
            <td>{{ content }}</td>
            <td>{{ fasted }}</td>
            <td><a href="/food/{{foodId}}/reviews/update/{{id}}" type="button">수정</a></td>
            <td><button>삭제</button></td>
        </tr>
    {{/ reviewList}}
    </tbody>
</table>
</html>
